{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/main.js",
  "scripts": {
    "gcp-build": "npm run build",
    "prebuild": "rimraf dist",
    "build:orig": "nest build",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:orig": "nest start",
    "start": "node ./dist/src/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "deploy": "gcloud app deploy",
    "predeploy:testnet": "npx ts-node deployments/deploy.ts prepare test",
    "deploy:testnet": "gcloud --project nitr0gen app deploy ./app-test.yaml",
    "postdeploy:testnet": "npx ts-node deployments/deploy.ts post test"
  },
  "dependencies": {
    "@activeledger/activeutilities": "^2.6.0",
    "@activeledger/sdk": "^1.3.4",
    "@nestjs/common": "^8.0.2",
    "@nestjs/core": "^8.0.2",
    "@nestjs/platform-express": "^8.0.2",
    "@nestjs/swagger": "^5.0.3",
    "@nestjs/typeorm": "^8.0.1",
    "dotenv": "^10.0.0",
    "mongodb": "3.6.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "0.3.12"
  },
  "devDependencies": {
    "@google-cloud/nodejs-repo-tools": "^3.3.0",
    "@nestjs/cli": "^8.0.2",
    "@nestjs/schematics": "^8.0.1",
    "@nestjs/testing": "^8.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.4.0",
    "@types/node": "^16.3.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^29.5.0",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
